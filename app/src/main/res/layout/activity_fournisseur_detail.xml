<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fournisseur.FournisseurDetail"
    android:background="#8CC0DE"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp"
        android:backgroundTint="#1D5B79"
        android:background="@drawable/border"
        android:visibility="gone">

    <EditText
        android:id="@+id/EditNom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Nom"
        android:padding="8dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <EditText
        android:id="@+id/EditPrenom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Prenom"
        android:inputType="textShortMessage"
        android:padding="8dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <EditText
        android:id="@+id/EditTele"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Telephone"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/white"
        android:visibility="gone" />

        <Button
            android:id="@+id/savebtn"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8EAC50"
            android:text="Save"
            app:cornerRadius="20dp" />
        <Button
            android:id="@+id/cancelbtn"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F1C93B"
            android:text="discard"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewFournisseurNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Nom"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        
        android:visibility="visible" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewFournisseurPrenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Prenom"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewFournisseurTele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:hint="Telephone"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">


        <Button
            android:id="@+id/backbtnFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E76161"
            android:padding="15dp"
            android:text="Back"
           android:layout_below="@+id/savebtn"
            />

    </RelativeLayout>

</LinearLayout>