<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".user.Detail_user">


    <EditText
        android:id="@+id/editNomUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Nom Utilisateur"
        android:padding="8dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <EditText
        android:id="@+id/EditPrenomUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Prenom Utilisateur"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <EditText
        android:id="@+id/EditEmailUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Email Utilisateur"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:visibility="gone" />


    <EditText
        android:id="@+id/editTelUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:drawablePadding="8dp"
        android:hint="Tel Utilisateur"
        android:padding="8dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewUserNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUserPrenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewUserTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/backbtnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/savebtn"
            android:backgroundTint="#E76161"
            android:padding="20dp"
            android:text="Back" />

        <Button
            android:id="@+id/savebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:padding="20dp"
            android:text="Save"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>