<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

    tools:context=".user.UserDetail">

    <LinearLayout
        android:id="@+id/barproduct"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:background="@drawable/product_name_bg"
        android:paddingTop="99dp"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/textViewUserNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:hint="NAME"

            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="33sp"
            android:textStyle="bold"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:backgroundTint="#6D77FA"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        android:layout_margin="10dp">

    <EditText
        android:id="@+id/editNomUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:singleLine="true"
        android:drawablePadding="8dp"
        android:hint="Nom Utilisateur"

        android:padding="8dp"

        android:background="@drawable/borderpurple"
        android:textColor="#303DE3"

        />

    <EditText
        android:id="@+id/EditPrenomUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:drawablePadding="8dp"
        android:hint="Prenom Utilisateur"
        android:singleLine="true"

        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/borderpurple"
        android:textColor="#303DE3"

        />

    <EditText
        android:id="@+id/EditEmailUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:drawablePadding="8dp"
        android:hint="Email Utilisateur"
        android:singleLine="true"

        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:background="@drawable/borderpurple"
        android:textColor="#303DE3"/>


    <EditText
        android:id="@+id/editTelUser"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"

        android:drawablePadding="8dp"
        android:hint="Tel Utilisateur"
        android:singleLine="true"
        android:maxLength="10"
        android:inputType="number"

        android:padding="8dp"
        android:background="@drawable/borderpurple"
        android:textColor="#303DE3"

        />

        <RadioGroup
            android:id="@+id/radioGroupRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/radioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:tag="2"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioVisitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visitor"
                android:tag="3"
                android:textColor="@color/white"/>
        </RadioGroup>

        <Button
            android:id="@+id/savebtn"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="Save"
            app:cornerRadius="20dp" />
        <Button
            android:id="@+id/cancelbtn"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:text="discard"
            app:cornerRadius="20dp" />
</LinearLayout>





    <TextView
        android:id="@+id/textViewUserEmail"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email User"
        android:padding="24dp"
        android:textColorHint="@color/white"

        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#333333"

        />

    <TextView
        android:id="@+id/textViewUserTel"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:hint="Telephone User"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#333333"
        />

</LinearLayout>