<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.AddProduct"
    android:gravity="center"
    android:background="#8CC0DE"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:backgroundTint="#1D5B79"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AJOUTER PRODUIT"
                android:id="@+id/useridtext"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editname"
                android:singleLine="true"
                android:background="@drawable/border_selector"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="NOM"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:drawablePadding="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editprice"
                android:background="@drawable/border_selector"
                android:layout_marginTop="20dp"
                android:maxLength="4"
                android:padding="8dp"
                android:hint="PRIX D'ACHAT"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:textColor="@color/white"
                android:drawablePadding="8dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/editmarge"
                android:background="@drawable/border_selector"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="MARGE"
                android:textColorHint="@color/white"
                android:maxLength="3"
                android:inputType="number"
                android:textColor="@color/white"
                android:drawablePadding="8dp"/>

            <Spinner
                android:id="@+id/spinnerFournisseur"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:padding="8dp"/>

            <Button
                android:id="@+id/addbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00DFA2"
                android:text="AJOUTER AVEC CODEBARRE"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/qrbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:text="AJOUTER AVEC QRCODE"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#00DFA2"
                app:cornerRadius = "20dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ANNULER"
                android:id="@+id/cancel"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E76161"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>