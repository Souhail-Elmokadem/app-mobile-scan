<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#8CC0DE">

    <TextView
        android:id="@+id/textViewNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:backgroundTint="#1D5B79"
            android:background="@drawable/border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modify Your Password"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white">

            </TextView>

    <EditText
        android:id="@+id/EditOldPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Your Old Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/EditNewPassword"
        android:layout_width="match_parent"
        android:layout_below="@+id/EditOldPassword"
        android:layout_height="50dp"
        android:hint="Enter Your New Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:drawablePadding="8dp"/>


    <EditText
        android:id="@+id/EditConfirmNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EditNewPassword"
        android:hint="Confirme Your New Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:drawablePadding="8dp" />



            <Button
        android:id="@+id/savebtn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/EditConfirmNewPassword"
        android:text="save"
        android:backgroundTint="#00DFA2"
        app:cornerRadius = "20dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E76161"
        android:text="DISCONNECT"
        app:cornerRadius="20dp" />
</LinearLayout>